#include "main.h"

/*
 * create_array : creates an array of chars and inits with spec char
 * @size : size of array
 * @c : initating char
 * Return - NULL if size = 0, else char
 */



char *create_array(unsigned int size, char c)
{
if (size == 0)
{
return (NULL);
}

char *array;
array = malloc(sizeof(char) * size);
unsigned int i = 0;

for (; i < size; i++)
{
array[i] = c;
}
return (array);
}
